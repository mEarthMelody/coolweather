                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDailyvis2"
                android:textColor="#fff"
                android:textSize="16sp"
                android:alpha="0.8"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
